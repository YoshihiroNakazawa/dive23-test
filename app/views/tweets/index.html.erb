<p class="flash"><%= notice %><%= alert %></p>

<h1>Listing Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <% unless Favorite.exists?(tweet_id: tweet, user_id: current_user.id) %>
        <td><%= link_to "お気に入り登録", add_tweet_path(tweet), method: :post %></td>
        <% else %>
        <td><%= link_to "お気に入り解除", delete_tweet_path(tweet), method: :delete %></td>
        <% end %>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
